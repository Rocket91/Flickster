<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorblackprimary">

    <ImageView
        android:id="@+id/ivPoster"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_alignParentTop="true"
        app:srcCompat="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:textColor="@color/colorWhite"
        android:textSize="24sp"
        tools:text="Toy Story 4"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/tvOverview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/ivPoster"
        android:layout_below="@id/tvReleaseDate2"
        android:layout_alignParentEnd="true"
        android:textColor="@color/colorRedlight"
        android:layout_margin="10dp"
        tools:text="Woody has always been confident about his place in the world and that his priority is taking care of his kid, whether that's Andy or Bonnie. But when Bonnie adds a reluctant new toy called &quot;Forky&quot; to her room, a road trip adventure alongside old and new friends will show Woody how big the world can be for a toy.&quot;, release_date: &quot;2019-06-19" />

    <TextView
        android:id="@+id/tvReleaseDate2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView2"
        android:layout_toRightOf="@id/textView2"
        android:text="TextView"
        android:textColor="@color/colorRedlight"
        android:textSize="15sp" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_alignParentStart="true"
        android:layout_below="@id/ivPoster"
        android:layout_marginBottom="5dp"
        android:layout_marginHorizontal="20dp"
        android:background="?android:attr/listDivider"
        android:backgroundTint="@color/colorGrey" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvTitle"
        android:text="Release date: "
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/ivPoster"

        android:textColor="@color/colorWhite"
        android:textSize="15dp" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignBottom="@id/ivPoster"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="90dp"
        android:layout_alignTop="@id/ivPoster"
        app:srcCompat="@drawable/yt_play_icon" />
</RelativeLayout>